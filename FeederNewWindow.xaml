<Window x:Class="Picky.FeederNewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="clr-namespace:Picky" 
mc:Ignorable="d" FontSize="12" 
Height="150" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#151f2d" WindowStyle="None">
     
    <StackPanel Margin="10 25 10 10">
        <TextBlock Text="Enter or Scan Feeder QR Code:" Foreground="White" Margin="0,0,0,10"/>
        <TextBox x:Name="InputTextBox" Margin="0,0,0,10" MinWidth="300" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="5,0,0,0" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="5,0,0,0" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
