<Window x:Class="Picky.FeederWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:Picky.Tools"
    mc:Ignorable="d" FontSize="15"
    Height="460" Width="750" WindowStartupLocation="CenterScreen" Background="#151f2d">
    <Border  Margin="0 0 0 0">
        <Grid Margin="10 5 10 5" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Feeder" Foreground="White" Margin="10,10,10,10" HorizontalAlignment="Left" TextAlignment="Left" />

            <Label Grid.Row="1" Grid.Column="0" Content="Part Description:" Margin="10 5 10 5" VerticalContentAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5" Margin="10 5 10 5" Text="{Binding SelectedCassette.SelectedFeeder.Description}"/>
            
            <Label Grid.Row="2" Grid.Column="0" Content="Pick Tool:" Margin="10 5 10 5" VerticalContentAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="10 5 10 5" IsReadOnly="True" Text="{Binding SelectedCassette.SelectedFeeder.PickTool.Description}"/>

            <Border Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="4" Grid.RowSpan="7" ClipToBounds="True" Margin="10 10 10 10" HorizontalAlignment="Stretch" BorderBrush="White" BorderThickness="1">
                <Image ClipToBounds="True" Source="{Binding SelectedCassette.SelectedFeeder.Part.Template}" Margin="10 0 15 0"/>
            </Border>

            <Label Grid.Row="3" Grid.Column="0" Content="QR Code:" Margin="10 5 10 5" VerticalContentAlignment="Center"/>
            <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="10 5 10 5" IsReadOnly="True" Text="{Binding SelectedCassette.SelectedFeeder.QRCode}"/>

            <Label Grid.Row="4" Grid.Column="0" Content="Part Interval:" Margin="10 5 10 5" VerticalContentAlignment="Center"/>
            <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="10 5 10 5" Text="{Binding SelectedCassette.SelectedFeeder.Interval, StringFormat={}{0:0.0}}"/>

            <Label Grid.Row="5" Grid.Column="0" Content="" Margin="10 5 10 5" VerticalContentAlignment="Center" FontWeight="UltraBold"/>
            <Label Grid.Row="5" Grid.Column="1" Content="X [mm]" Margin="10 5 10 5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="UltraBold"/>
            <Label Grid.Row="5" Grid.Column="2" Content="Y [mm]" Margin="10 5 10 5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="UltraBold"/>

            <Label Grid.Row="6" Grid.Column="0" Content="Feeder Position" Margin="10 5 10 5" VerticalContentAlignment="Center"/>
            <TextBlock Grid.Row="6" Grid.Column="1" Margin="10" Foreground="White" HorizontalAlignment="Center" Text="{Binding SelectedCassette.SelectedFeeder.Origin.X, StringFormat={}{0:0.000}}"/>
            <TextBlock Grid.Row="6" Grid.Column="2" Margin="10" Foreground="White" HorizontalAlignment="Center" Text="{Binding SelectedCassette.SelectedFeeder.Origin.Y, StringFormat={}{0:0.000}}"/>

            <Label Grid.Row="7" Grid.Column="0" Content="Next Component:" Margin="10 5 10 5" VerticalContentAlignment="Center"/>
            <TextBlock Grid.Row="7" Grid.Column="1" Margin="10" Foreground="White" HorizontalAlignment="Center" Text="{Binding SelectedCassette.SelectedFeeder.NextPartOpticalLocation.X, StringFormat={}{0:0.000}, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Grid.Row="7" Grid.Column="2" Margin="10" Foreground="White" HorizontalAlignment="Center" Text="{Binding SelectedCassette.SelectedFeeder.NextPartOpticalLocation.Y, StringFormat={}{0:0.000}, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="8" Grid.Column="0" Content="Next Pick:" Margin="10 5 10 5" VerticalContentAlignment="Center"/>
            <TextBlock Grid.Row="8" Grid.Column="1" Margin="10" Foreground="White" HorizontalAlignment="Center" Text="{Binding SelectedCassette.SelectedFeeder.NextPartPickLocation.X, StringFormat={}{0:0.000}, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Grid.Row="8" Grid.Column="2" Margin="10" Foreground="White" HorizontalAlignment="Center" Text="{Binding SelectedCassette.SelectedFeeder.NextPartPickLocation.Y, StringFormat={}{0:0.000}, UpdateSourceTrigger=PropertyChanged}"/>

            <ui:Button Grid.Row="9" Grid.Column="0" Margin="5" HorizontalAlignment="Stretch" Content="Find Feeder" Command="{Binding CloseCommand}"/>
            <ui:Button Grid.Row="9" Grid.Column="4" Margin="5" HorizontalAlignment="Stretch" Content="Save" Icon="Save28" Command="{Binding SaveFeederCommand}"/>
            <ui:Button Grid.Row="9" Grid.Column="5" Margin="5" HorizontalAlignment="Stretch" Content="Cancel" Command="{Binding CloseCommand}"/>

        </Grid>
    </Border>
</Window>
